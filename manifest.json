{
  "manifest_version": 3,
  "default_locale": "en",
  "name": "__MSG_appName__",
  "version": "2.0.1",
  "description": "__MSG_shortDesc__",
  "author": "Maksim Bugai",
  "homepage_url": "https://secure.fileshare.ovh",
  "permissions": [
  ],
  "host_permissions": [
    "https://secure.fileshare.ovh/*"
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'; frame-src https://secure.fileshare.ovh;"
  },
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "html/popup.html",
    "default_icon": "images/file-sharing.png"
  },
  "icons": {
    "16": "images/file-sharing.png",
    "48": "images/file-sharing.png",
    "128": "images/file-sharing.png"
  }
}
